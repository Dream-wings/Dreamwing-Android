<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Dreamwing" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:fontFamily">@font/happiness_sans_title</item>
    </style>

    <style name="BottomNavigationActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/happiness_sans_title</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main</item>
    </style>
    <style name="BottomNavigationInactive" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/happiness_sans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/nav_off</item>
    </style>
    <style name="homeComment">
        <item name="android:fontFamily">@font/happiness_sans_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="title">
        <item name="android:fontFamily">@font/happiness_sans_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mission_description">
        <item name="android:fontFamily">@font/happiness_sans_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="quiz_question">
        <item name="android:fontFamily">@font/happiness_sans_title</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="quiz_option">
        <item name="android:fontFamily">@font/happiness_sans_title</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="RoundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 둥글기의 정도를 백분율로 설정 -->
    </style>
    <!-- 기본 TextInputLayout 스타일 -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- 기본 Hint Animation 비활성화 -->
        <item name="hintAnimationEnabled">false</item>

        <!-- 힌트의 기본 텍스트 색상 -->
        <item name="hintTextColor">@color/black</item>

        <!-- 텍스트 필드와 힌트의 색상 -->
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>