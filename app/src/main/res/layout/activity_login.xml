<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:padding="8dp">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:text="@string/login"
            android:fontFamily="@font/happiness_sans_title"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="15dp"
            android:padding="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_login_id" />

                <EditText
                    android:hint="@string/id"
                    android:id="@+id/editID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:inputType="text"
                    android:fontFamily="@font/happiness_sans_regular"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- 밑줄을 추가하는 View -->
            <View
                android:id="@+id/underlineID"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="15dp"
            android:padding="8dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_password" />
                <EditText
                    android:id="@+id/editPWD"
                    android:hint="@string/pwd"
                    android:fontFamily="@font/happiness_sans_regular"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:backgroundTint="@color/white"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <!-- 비밀번호 입력란 밑의 밑줄 -->
            <View
                android:id="@+id/underlinePWD"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:fontFamily="@font/happiness_sans_regular"
            android:background="@drawable/button_signup"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/join_done"
            android:textColor="@color/white"
            android:fontFamily="@font/happiness_sans_regular"
            android:background="@drawable/button_login"/>
    </LinearLayout>

</LinearLayout>