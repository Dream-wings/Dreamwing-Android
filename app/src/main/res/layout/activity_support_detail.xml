<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/donateButton"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image and Overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <!-- Background Image -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="@android:color/transparent"
                    />

                <!-- Category and Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/categoryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_box"
                        android:backgroundTint="#FEE500"
                        android:padding="8dp"
                        android:text="카테고리"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/happiness_sans_title"
                        />

                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="타이틀"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/happiness_sans_title"
                        />

                </LinearLayout>

            </FrameLayout>

            <!-- Basic Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/recruitStartDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모집 시작일: 2024-07-01"
                        android:fontFamily="@font/happiness_sans_title"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/recruitEndDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모집 종료일: 2024-07-31"
                        android:fontFamily="@font/happiness_sans_title"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/totalAmountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 금액: 100,000,000 WING"
                        android:fontFamily="@font/happiness_sans_title"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/currentAmountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모금액: 50,000,000 WING"
                        android:fontFamily="@font/happiness_sans_title"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/contentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:fontFamily="@font/happiness_sans_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="416dp"
                android:layout_marginLeft="16dp"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginBottom="5dp"/>

            <!-- Additional Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Placeholder for additional content -->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Donate Button -->
    <Button
        android:id="@+id/donateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="기부하기"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="#00AEFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/happiness_sans_title"
        android:visibility="visible"
        />
</RelativeLayout>
