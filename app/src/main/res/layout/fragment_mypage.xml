<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".user.ui.MyPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 프로필 및 업데이트 버튼 레이아웃 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="32dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_profile_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:shapeAppearanceOverlay="@style/RoundImage"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/happiness_sans_title"
                    android:text="로그인이 필요합니다."
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/profileImage"
                    app:layout_constraintEnd_toStartOf="@id/updateButton"
                    app:layout_constraintHorizontal_bias="0.218"
                    app:layout_constraintStart_toEndOf="@id/profileImage"
                    app:layout_constraintTop_toTopOf="@id/profileImage" />

                <Button
                    android:id="@+id/updateButton"
                    android:background="@drawable/button_update"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="프로필 수정"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profileImage"
                    app:layout_constraintBottom_toBottomOf="@id/profileImage"
                    android:fontFamily="@font/happiness_sans_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 포인트 정보 카드뷰 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/point_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/sub_lightGray2"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보유 WING"
                            android:textSize="13sp"
                            android:fontFamily="@font/happiness_sans_regular"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/userPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:fontFamily="@font/happiness_sans_bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WING"
                            android:textSize="16sp"
                            android:fontFamily="@font/happiness_sans_bold"
                            android:textColor="@color/sub_blue" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 후원 WING"
                            android:textSize="13sp"
                            android:fontFamily="@font/happiness_sans_regular"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/totalSupportPoit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/happiness_sans_bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WING"
                            android:textSize="16sp"
                            android:fontFamily="@font/happiness_sans_bold"
                            android:textColor="@color/sub_blue" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 내역 조회 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:text="내역 조회"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/happiness_sans_bold"/>

                <!-- 밑줄을 추가하는 View -->
                <View
                    android:id="@+id/underlineID"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/happiness_sans_regular"/>

                <TextView
                    android:id="@+id/pointDetail"
                    android:text="포인트 내역"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/happiness_sans_title"/>

                <TextView
                    android:id="@+id/supportDetail"
                    android:text="후원 내역"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/happiness_sans_title"/>

                <TextView
                    android:id="@+id/volunteerDetail"
                    android:text="봉사활동 내역"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/happiness_sans_title"/>
            </LinearLayout>

            <Button
                android:id="@+id/logoutButton"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="로그아웃"
                android:stateListAnimator="@null"
                style="@style/title"
                android:textColor="@color/black"
                android:fontFamily="@font/happiness_sans_title"
                android:background="@drawable/button_logout"
                />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
