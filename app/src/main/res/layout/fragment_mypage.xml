<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".user.ui.MyPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 프로필 및 업데이트 버튼 레이아웃 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="91dp"
                    android:layout_height="112dp"
                    android:src="@drawable/default_profile_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="로그인이 필요합니다."
                    app:layout_constraintStart_toEndOf="@id/profileImage"
                    app:layout_constraintTop_toTopOf="@id/profileImage"
                    app:layout_constraintBottom_toBottomOf="@id/profileImage"
                    app:layout_constraintEnd_toStartOf="@id/updateButton"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:text="Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profileImage"
                    app:layout_constraintBottom_toBottomOf="@id/profileImage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 포인트 정보 카드뷰 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/point_info"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/sub_lightGray"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/userPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 wing"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/totalSupportPoit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 wing"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 데일리 미션 카드뷰 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="데일리 미션"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/daily_mission"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/sub_lightGray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="16dp">

                        <ImageButton
                            android:id="@+id/walkButton"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_mission_walk"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/quizButton"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_mission_quiz"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="16dp"
                            app:tint="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 내역 조회 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:text="내역 조회"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"/>

                <!-- 밑줄을 추가하는 View -->
                <View
                    android:id="@+id/underlineID"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/pointDetail"
                    android:text="포인트 내역"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/supportDetail"
                    android:text="후원 내역"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/volunteerDetail"
                    android:text="봉사 활동 내역"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="14sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/logoutButton"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="로그아웃"
                android:textColor="@color/white"
                android:fontFamily="@font/happiness_sans_regular"
                android:background="@drawable/button_logout"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>