<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Corner radius -->
    <corners android:radius="8dp" />

    <!-- Shadow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
